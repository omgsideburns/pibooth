+        return
+
+    capture_choices = config.gettuple('PICTURE', 'captures', int, 2)
+
+    for captures_folder in os.listdir(osp.join(basepath, 'raw')):
+        captures_folder_path = osp.join(basepath, 'raw', captures_folder)
