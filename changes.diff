+        """Rotate a PIL image, same direction than RpiCamera.
+        """
+        if rotation == 90:
+            return image.transpose(Image.ROTATE_90)
+        elif rotation == 180:
+            return image.transpose(Image.ROTATE_180)
+        elif rotation == 270:
+            return image.transpose(Image.ROTATE_270)
+        return image
+
