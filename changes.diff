+            if flip:
+                # Don't flip again, already done at init
+                flip = False
+            else:
+                # Flip again because flipped once at init
+                flip = True
+        self._cam.start_preview(resolution=(rect.width, rect.height), hflip=flip,
+                                fullscreen=False, window=tuple(rect))
