+    captures = []
+    for capture_path in captures_paths:
+        try:
+            image = Image.open(osp.join(images_folder, capture_path))
+            captures.append(image)
+        except OSError:
+            LOGGER.info("File %s doesn't seem to be an image", capture_path)
+    return captures
